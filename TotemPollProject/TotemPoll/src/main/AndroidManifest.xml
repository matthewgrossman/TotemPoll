<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.grahamp1.polldance"
          android:versionCode="1"
          android:versionName="1.0" >

    <uses-sdk
            android:minSdkVersion="11"
            android:targetSdkVersion="16" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >

        <activity
                android:name="com.grahamp1.polldance.MainActivity"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".HostHomeActivity"
                android:label="@string/app_name">
        </activity>

        <activity
                android:name=".CreatePollActivity"
                android:label = "@string/create_poll_title" >
        </activity>


        <activity
                android:name=".ResultsActivity"
                android:label="PollDance: Poll Results">
        </activity>


        <!-- Testing client Response -->
        <activity
                android:name = ".ClientResponseActivity"
                android:label = "@string/client_response_title" >
        </activity>

        <!-- Linking Host Home to Question Select Screen -->
        <activity
                android:name = ".QuestionSelectionActivity"
                android:label = "@string/question_selection_title">
        </activity>

    </application>

</manifest>
