<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.grahamp1.polldance">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">

        <activity android:label="@string/app_name" android:name="com.grahamp1.polldance.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:label="@string/app_name" android:name="com.grahamp1.polldance.HostHomeActivity">
        </activity>

        <activity android:label="@string/create_poll_title" android:name="com.grahamp1.polldance.CreatePollActivity">
        </activity>


        <activity android:label="Your loaded questions..." android:name="com.grahamp1.polldance.HostLoadActivity">
        </activity>


        <activity android:label="PollDance: Poll Results" android:name="com.grahamp1.polldance.ResultsActivity">
        </activity>


        <!-- Testing client Response -->
        <activity android:label="@string/client_response_title" android:name="com.grahamp1.polldance.ClientResponseActivity">
        </activity>

    </application>

</manifest>
